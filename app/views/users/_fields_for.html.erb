
<% if form.object.errors.any? %>
    <div class="text-red-600">Error: <%= form.object.errors.full_messages.first %></div>
<% end %>

<div class="my-5">
    <%= form.label :name, class: "font-semibold" %>
    <%= form.text_field :name, required: true, autofocus: true, autocomplete: "Your Name", placeholder: "Enter your name", class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
</div>

<% if form.object.new_record? %>
    <div class="my-5">
        <%= form.label :email, class: "font-semibold" %>
        <%= form.email_field :email, required: true, autofocus: true, autocomplete: "email@example.com", placeholder: "Enter your email address", class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
    </div>
    <div class="my-5">
        <%= form.label :password, class: "font-semibold" %>
        <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Enter your password", maxlength: 72, class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
        <%= form.label :invite_code, class: "font-semibold" %>
        <%= form.text_field :invite_code, required: true, autocomplete: "off", placeholder: "Enter your invitation code", class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
    </div>
<% end %>